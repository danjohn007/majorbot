# Apache 2.4+ Access Control
<IfModule mod_authz_core.c>
    Require all granted
</IfModule>

# Apache 2.2 Compatibility
<IfModule !mod_authz_core.c>
    Order allow,deny
    Allow from all
</IfModule>

# Allow access to static files
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|svg|ico|woff|woff2|ttf|eot|webp)$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Allow from all
    </IfModule>
</FilesMatch>
