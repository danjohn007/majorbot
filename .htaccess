<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Allow direct access to test_connection.php and other root files
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Redirect to public folder
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
